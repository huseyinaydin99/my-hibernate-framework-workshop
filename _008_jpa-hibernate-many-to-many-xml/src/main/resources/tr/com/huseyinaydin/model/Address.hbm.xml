<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!--
            @Entity
            @Table(name = "ADDRESS")
            public class Address { }
     -->
    <class name="tr.com.huseyinaydin.model.Address" table="ADDRESS">

        <!--
                @Id
                @GeneratedValue(strategy = GenerationType.IDENTITY)
                @Column(name = "ADDRESS_ID", nullable = false)
                private int addressId;
         -->
        <id name="addressId" type="int">
            <column name="ADDRESS_ID"/>
            <generator class="identity"/>
        </id>

        <!--
                @Column(name = "STREET", nullable = false, length = 30)
                private String street;
         -->
        <property name="street" type="string">
            <column name="STREET" length="30" not-null="true"/>
        </property>

        <!--
                @Column(name = "CITY", nullable = false, length = 20)
                private String city;
         -->
        <property name="city" type="string">
            <column name="CITY" length="20" not-null="true"/>
        </property>

        <!--
                @Column(name = "COUNTRY", nullable = false, length = 20)
                private String country;
         -->
        <property name="country" type="string">
            <column name="COUNTRY" length="20" not-null="true"/>
        </property>

        <!--
                @Column(name = "TYPE", length = 10)
                private String type
         -->
        <property name="type" type="string">
            <column name="TYPE" length="10"/>
        </property>

        <!--
                @ManyToMany(mappedBy = "addresses", fetch = FetchType.LAZY)
                private Set<Customer> customers = new HashSet<Customer>(0);
         -->
        <set name="customers" table="CUST_ADDR" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="ADDRESS_ID" not-null="true"/>
            </key>
            <many-to-many entity-name="tr.com.huseyinaydin.model.Customer">
                <column name="CUSTOMER_ID" not-null="true"/>
            </many-to-many>
        </set>

    </class>
</hibernate-mapping>